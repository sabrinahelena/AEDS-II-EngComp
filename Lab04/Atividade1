package Atividades;

public class Exercicio1 {

	
	public static void main(String[] args) {
		int n = 5;
		int c = 0;

		// TODO Auto-generated method stub
		for (int i = n; i >= 1; i /= 2){
			 c++;	
			}
		System.out.println("C: "+ c);
		
	}
	
	/*
	 * Para N = 5, usando a formula fechada de piso de LgN + 1, fica: 
	 * Lg5 = 2 e uns quebrados, como é teto, fica só 2. somado com 1, 3. C = 3.
	*/
}
